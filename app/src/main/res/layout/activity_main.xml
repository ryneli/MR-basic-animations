<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context="com.study.zhenqiangli.mr_basic_animations.MainActivity">

    <ImageView
        android:layout_column="0"
        android:layout_row="0"
        android:layout_width="@dimen/cell.width"
        android:layout_height="@dimen/cell.height"
        android:src="@color/cell.0.0"
        android:background="@drawable/cell_shape"/>
    <ImageView
        android:layout_column="0"
        android:layout_row="1"
        android:layout_width="@dimen/cell.width"
        android:layout_height="@dimen/cell.height"
        android:src="@color/cell.0.1"
        android:background="@drawable/cell_shape"/>
    <ImageView
        android:layout_column="0"
        android:layout_row="2"
        android:layout_width="@dimen/cell.width"
        android:layout_height="@dimen/cell.height"
        android:src="@color/cell.0.2"
        android:background="@drawable/cell_shape"/>
    <ImageView
        android:layout_column="1"
        android:layout_row="0"
        android:layout_width="@dimen/cell.width"
        android:layout_height="@dimen/cell.height"
        android:src="@color/cell.1.0"
        android:background="@drawable/cell_shape"/>
    <!-- sharedElementTransition doesn't work for src="@color" or src="@shape" -->
    <ImageView
        android:id="@+id/mid_cell"
        android:transitionName="@string/transition_name"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_width="@dimen/cell.width"
        android:layout_height="@dimen/cell.height"
        android:src="@drawable/yellow"/>
    <ImageView
        android:layout_column="1"
        android:layout_row="2"
        android:layout_width="@dimen/cell.width"
        android:layout_height="@dimen/cell.height"
        android:src="@color/cell.1.2"
        android:background="@drawable/cell_shape"/>
    <ImageView
        android:layout_column="2"
        android:layout_row="0"
        android:layout_width="@dimen/cell.width"
        android:layout_height="@dimen/cell.height"
        android:src="@color/cell.2.0"
        android:background="@drawable/cell_shape"/>
    <ImageView
        android:layout_column="2"
        android:layout_row="1"
        android:layout_width="@dimen/cell.width"
        android:layout_height="@dimen/cell.height"
        android:src="@color/cell.2.1"
        android:background="@drawable/cell_shape"/>
    <ImageView
        android:layout_column="2"
        android:layout_row="2"
        android:layout_width="@dimen/cell.width"
        android:layout_height="@dimen/cell.height"
        android:src="@color/cell.2.2"
        android:background="@drawable/cell_shape"/>


</GridLayout>
